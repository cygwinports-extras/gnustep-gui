inherit gnustep

DESCRIPTION="GNUstep GUI libraries"
HOMEPAGE="http://www.gnustep.org/"
SRC_URI="mirror://gnustep/core/${P}.tar.gz"

PKG_NAMES="${PN} lib${PN}0.16 lib${PN}-devel"
gnustep_gui_CONTENTS="--exclude=Libraries usr/bin/*.exe usr/lib/GNUstep/ usr/share/doc/"
libgnustep_gui0_16_CONTENTS="usr/bin/*-0_16.dll usr/lib/GNUstep/Libraries/"
libgnustep_gui_devel_CONTENTS="usr/include/ usr/lib/lib* usr/share/GNUstep/Makefiles/"

CYGCONF_ARGS="--enable-libgif --disable-ungif --disable-cups"
